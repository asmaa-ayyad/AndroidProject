<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@drawable/bg">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="88dp"
        android:elevation="100dp"
        android:text="WELCOME, ASMAA"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintTop_toTopOf="@+id/button2" />

    <Button
        android:id="@+id/button6"
        android:layout_width="642dp"
        android:layout_height="520dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="108dp"

        android:background="@drawable/circular_button_background"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/button7"
        app:layout_constraintTop_toTopOf="@+id/button2" />

    <Button
        android:id="@+id/button7"
        android:layout_width="654dp"
        android:layout_height="197dp"

        android:layout_marginTop="306dp"
        android:backgroundTint="@color/white"

        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button6" />

    <Button
        android:id="@+id/button2"
        android:layout_width="331dp"
        android:layout_height="401dp"

        android:layout_marginStart="132dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/homebut"
        android:backgroundTint="@color/white"
        android:text=""
        app:circularflow_radiusInDP="400dp"
        app:layout_constraintStart_toStartOf="@+id/button6"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mealbuton"
        android:layout_width="149dp"
        android:layout_height="167dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="188dp"
        android:background="@drawable/button"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingRight="30dp"
        android:paddingBottom="15dp"
        android:text="MEAL management"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/button6"
        app:layout_constraintTop_toTopOf="@+id/button6" />

    <Button
        android:id="@+id/restbuton"
        android:layout_width="146dp"
        android:layout_height="166dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/button"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingRight="30dp"
        android:paddingBottom="15dp"
        android:text="Restaurant management"
        android:textColor="#ffffff"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toTopOf="@+id/button6" />

    <Button
        android:id="@+id/button4"
        android:layout_width="52dp"
        android:layout_height="42dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/ic_baseline_home_work_24"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/restbuton"
        app:layout_constraintTop_toTopOf="@+id/button6" />

    <Button
        android:id="@+id/button5"
        android:layout_width="52dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/ic_baseline_fastfood_24"
        android:text=""
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintTop_toTopOf="@+id/mealbuton" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="184dp"
        android:layout_height="314dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:elevation="10dp"
        android:src="@drawable/chif"
        app:layout_constraintEnd_toStartOf="@+id/mealbuton"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>