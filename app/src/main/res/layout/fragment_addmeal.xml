<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/addmeals"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".addsongs">


        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="234dp"
            android:layout_height="134dp"

            android:layout_marginTop="4dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/restu" />

        <EditText
            android:id="@+id/mealname"
            android:layout_width="380dp"
            android:layout_height="63dp"

            android:layout_marginTop="137dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/edittext2"
            android:ems="10"
            android:hint="    name"
            android:inputType="textPersonName"
            android:paddingStart="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView12" />

        <EditText
            android:id="@+id/mealreat"
            android:layout_width="380dp"
            android:layout_height="63dp"

            android:layout_marginTop="95dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/edittext2"
            android:ems="10"
            android:hint="   rate"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mealprice" />

        <EditText
            android:id="@+id/mealprice"
            android:layout_width="380dp"
            android:layout_height="63dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/edittext2"
            android:ems="10"
            android:hint="   price"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mealname" />

        <EditText
            android:id="@+id/mealdescription"
            android:layout_width="380dp"
            android:layout_height="63dp"
            android:layout_marginTop="86dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/edittext2"
            android:ems="10"
            android:text="Cold, creamy, so thick that your straw stands straight up ,and filled with juicy berries"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mealreat" />

        <Button
            android:id="@+id/addmealrest"
            android:layout_width="379dp"
            android:layout_height="70dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="#DBCFFB"
            android:text="add"

            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mealdescription" />

        <Button
            android:id="@+id/button"
            android:layout_width="147dp"
            android:layout_height="177dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="42dp"
            android:background="@drawable/cardbutt"
            android:backgroundTint="#DBCFFB"
            android:rotation="117"
            android:rotationX="13"
            android:rotationY="25"
            android:text=""
            app:layout_constraintBottom_toTopOf="@+id/mealname"
            app:layout_constraintStart_toEndOf="@+id/imageView12" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>